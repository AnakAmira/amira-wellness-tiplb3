<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AmiraWellness" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AmiraWellness.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AmiraWellness.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AmiraWellness.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AmiraWellness.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AmiraWellness.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AmiraWellness.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AmiraWellness.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AmiraWellness.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AmiraWellness.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AmiraWellness.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.AmiraWellness.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AmiraWellness.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AmiraWellness.Overline</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AmiraWellness.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AmiraWellness.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AmiraWellness.LargeComponent</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.AmiraWellness.PrimaryButton</item>
        <item name="textInputStyle">@style/Widget.AmiraWellness.TextField</item>
        <item name="materialCardViewStyle">@style/Widget.AmiraWellness.Card</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>
    
    <!-- Theme without action bar -->
    <style name="Theme.AmiraWellness.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- App bar overlay -->
    <style name="Theme.AmiraWellness.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    
    <!-- Popup overlay -->
    <style name="Theme.AmiraWellness.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    <!-- Typography styles -->
    <style name="TextAppearance.AmiraWellness.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="lineHeight">24sp</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="lineHeight">20sp</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="letterSpacing">0.1</item>
    </style>
    
    <!-- Shape appearances -->
    <style name="ShapeAppearance.AmiraWellness.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.AmiraWellness.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.AmiraWellness.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Component styles - moved from styles.xml to eliminate circular dependency -->
    <style name="Widget.AmiraWellness.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AmiraWellness.Button</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AmiraWellness.MediumComponent</item>
        <item name="rippleColor">@color/primary_dark</item>
        <item name="elevation">2dp</item>
    </style>
    
    <style name="Widget.AmiraWellness.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.AmiraWellness.Button</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AmiraWellness.MediumComponent</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
    
    <style name="Widget.AmiraWellness.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="counterTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="helperTextTextColor">@color/text_secondary</item>
    </style>
    
    <style name="Widget.AmiraWellness.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.AmiraWellness.Splash" parent="Theme.AmiraWellness.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>
</resources>