<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.AmiraWellness.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/primary_dark</item>
        <item name="elevation">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.AmiraWellness.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.AmiraWellness.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
    
    <!-- Text Field Styles -->
    <style name="Widget.AmiraWellness.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="counterTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="helperTextTextColor">@color/text_secondary</item>
    </style>
    
    <style name="Widget.AmiraWellness.TextField.Search" parent="Widget.AmiraWellness.TextField">
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/text_secondary</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/text_secondary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.AmiraWellness.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.AmiraWellness.EmotionCard" parent="Widget.AmiraWellness.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.AmiraWellness.JournalCard" parent="Widget.AmiraWellness.Card">
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <style name="Widget.AmiraWellness.ToolCard" parent="Widget.AmiraWellness.Card">
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <!-- Progress and Slider Styles -->
    <style name="Widget.AmiraWellness.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/primary_light</item>
        <item name="android:minHeight">8dp</item>
    </style>
    
    <style name="Widget.AmiraWellness.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/primary</item>
        <item name="trackColorActive">@color/primary</item>
        <item name="trackColorInactive">@color/primary_light</item>
        <item name="haloColor">@color/primary_light</item>
        <item name="labelStyle">@style/Widget.MaterialComponents.Tooltip</item>
    </style>
    
    <!-- Divider Style -->
    <style name="Widget.AmiraWellness.Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <!-- Custom Text Appearance Styles -->
    <style name="TextAppearance.AmiraWellness.EmotionLabel" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.ToolName" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="TextAppearance.AmiraWellness.JournalDate" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Animation Styles -->
    <style name="Animation.AmiraWellness.FadeIn">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>
    
    <style name="Animation.AmiraWellness.FadeOut">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="Widget.AmiraWellness.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AmiraWellness.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AmiraWellness.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.AmiraWellness.DialogButton</item>
    </style>
    
    <style name="Widget.AmiraWellness.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Bottom Sheet Styles -->
    <style name="Widget.AmiraWellness.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AmiraWellness.BottomSheet</item>
        <item name="backgroundTint">@color/surface</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.AmiraWellness.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>