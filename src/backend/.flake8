max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    env,
    venv,
    ENV,
    env.bak,
    venv.bak,
    migrations,
    alembic
ignore = E203, E266, E501, W503, F403, F401
max-complexity = 10
select = B, C, E, F, W, T4, B9
per-file-ignores =
    __init__.py: F401
    test_*.py: E501