// Type definitions for the tool structure
export enum ToolCategory {
  GRATITUDE = 'GRATITUDE',
  BREATHING = 'BREATHING',
  MEDITATION = 'MEDITATION',
  JOURNALING = 'JOURNALING',
  SOMATIC = 'SOMATIC'
}

export enum ContentType {
  GUIDED_EXERCISE = 'GUIDED_EXERCISE',
  AUDIO = 'AUDIO',
  VIDEO = 'VIDEO',
  TEXT = 'TEXT',
  INTERACTIVE = 'INTERACTIVE'
}

export enum DifficultyLevel {
  BEGINNER = 'BEGINNER',
  INTERMEDIATE = 'INTERMEDIATE',
  ADVANCED = 'ADVANCED'
}

export enum Emotion {
  ANXIETY = 'ANXIETY',
  SADNESS = 'SADNESS',
  ANGER = 'ANGER',
  FEAR = 'FEAR',
  FRUSTRATION = 'FRUSTRATION',
  OVERWHELM = 'OVERWHELM',
  INSECURITY = 'INSECURITY',
  SHAME = 'SHAME',
  DISSATISFACTION = 'DISSATISFACTION',
  BOREDOM = 'BOREDOM',
  RESTLESSNESS = 'RESTLESSNESS',
  LONELINESS = 'LONELINESS',
  DISCONNECTION = 'DISCONNECTION',
  RESENTMENT = 'RESENTMENT',
  GRIEF = 'GRIEF',
  DESPAIR = 'DESPAIR',
  STRESS = 'STRESS',
  INSOMNIA = 'INSOMNIA',
  SCARCITY = 'SCARCITY'
}

export interface ExerciseStep {
  order: number;
  title: string;
  description: string;
  duration: number; // in seconds
}

export interface GuidedExerciseContent {
  title: string;
  instructions: string;
  steps: ExerciseStep[];
  benefits: string[];
  tips: string[];
}

export interface AudioContent {
  title: string;
  instructions: string;
  transcript: string;
  benefits: string[];
  tips: string[];
}

export type ToolContent = GuidedExerciseContent | AudioContent;

export interface ToolMetadata {
  author: string;
  tags: string[];
  created_date: string;
  version: string;
}

export interface Tool {
  name: string;
  description: string;
  category: ToolCategory;
  content_type: ContentType;
  estimated_duration: number;
  difficulty: DifficultyLevel;
  target_emotions: Emotion[];
  is_active: boolean;
  is_premium: boolean;
  content: ToolContent;
  image_url: string;
  audio_url: string;
  metadata: ToolMetadata;
}

