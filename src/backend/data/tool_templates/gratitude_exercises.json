/**
 * Type guard to check if content is GuidedExerciseContent
 */
export function isGuidedExercise(content: ToolContent): content is GuidedExerciseContent {
  return 'steps' in content;
}

/**
 * Type guard to check if content is AudioContent
 */
export function isAudioContent(content: ToolContent): content is AudioContent {
  return 'transcript' in content;
}

/**
 * Get all active gratitude tools
 */
export function getActiveGratitudeTools(): Tool[] {
  return gratitudeTools.filter(tool => tool.is_active);
}

/**
 * Get gratitude tools by difficulty level
 */
export function getToolsByDifficulty(difficulty: DifficultyLevel): Tool[] {
  return gratitudeTools.filter(tool => tool.difficulty === difficulty && tool.is_active);
}

/**
 * Get gratitude tools that target a specific emotion
 */
export function getToolsByEmotion(emotion: Emotion): Tool[] {
  return gratitudeTools.filter(tool => 
    tool.target_emotions.includes(emotion) && tool.is_active
  );
}

/**
 * Get gratitude tools with duration less than or equal to specified minutes
 */
export function getToolsByMaxDuration(maxMinutes: number): Tool[] {
  return gratitudeTools.filter(tool => 
    tool.estimated_duration <= maxMinutes && tool.is_active
  );
}

/**
 * Get free (non-premium) gratitude tools
 */
export function getFreeGratitudeTools(): Tool[] {
  return gratitudeTools.filter(tool => !tool.is_premium && tool.is_active);
}

/**
 * Get premium gratitude tools
 */
export function getPremiumGratitudeTools(): Tool[] {
  return gratitudeTools.filter(tool => tool.is_premium && tool.is_active);
}

/**
 * Get a gratitude tool by name
 */
export function getToolByName(name: string): Tool | undefined {
  return gratitudeTools.find(tool => tool.name === name && tool.is_active);
}

/**
 * Search gratitude tools by keyword in name, description, or tags
 */
export function searchGratitudeTools(keyword: string): Tool[] {
  const lowercaseKeyword = keyword.toLowerCase();
  return gratitudeTools.filter(
    tool => 
      tool.is_active && (
        tool.name.toLowerCase().includes(lowercaseKeyword) || 
        tool.description.toLowerCase().includes(lowercaseKeyword) ||
        tool.metadata.tags.some(tag => tag.toLowerCase().includes(lowercaseKeyword))
      )
  );
}

/**
 * Get recommended gratitude tools for a specific emotion
 */
export function getRecommendedToolsForEmotion(emotion: Emotion, limit: number = 3): Tool[] {
  return gratitudeTools
    .filter(tool => tool.target_emotions.includes(emotion) && tool.is_active)
    .sort(() => Math.random() - 0.5) // Simple shuffle for randomization
    .slice(0, limit);
}

/**
 * Get beginner-friendly gratitude tools
 */
export function getBeginnerGratitudeTools(): Tool[] {
  return gratitudeTools.filter(
    tool => tool.difficulty === DifficultyLevel.BEGINNER && tool.is_active
  );
}

/**
 * Get tools that can be completed within a short timeframe (5 minutes or less)
 */
export function getQuickGratitudeTools(): Tool[] {
  return gratitudeTools.filter(
    tool => tool.estimated_duration <= 5 && tool.is_active
  );
}

/**
 * Get total duration of all steps in a guided exercise
 */
export function getTotalStepsDuration(tool: Tool): number {
  if (isGuidedExercise(tool.content)) {
    return tool.content.steps.reduce((total, step) => total + step.duration, 0);
  }
  return 0;
}

/**
 * Get all unique tags used across gratitude tools
 */
export function getAllGratitudeTags(): string[] {
  const tagsSet = new Set<string>();
  
  gratitudeTools.forEach(tool => {
    tool.metadata.tags.forEach(tag => tagsSet.add(tag));
  });
  
  return Array.from(tagsSet).sort();
}