/**
 * Types of emotions that can be targeted by exercises
 */
export type EmotionType = 
  'ANXIETY' | 'STRESS' | 'OVERWHELM' | 'DISCONNECTION' | 'TENSION' | 
  'FRUSTRATION' | 'STUCKNESS' | 'FEAR' | 'GRIEF' | 'ANGER' | 
  'SUPPRESSION' | 'INSECURITY' | 'POWERLESSNESS' | 'SHYNESS' | 
  'SHAME' | 'SELF_CRITICISM' | 'SADNESS' | 'LONELINESS' | 
  'DISTRACTION';

/**
 * Difficulty levels for exercises
 */
export type DifficultyLevel = 'BEGINNER' | 'INTERMEDIATE' | 'ADVANCED';

/**
 * Exercise content types
 */
export type ContentType = 'GUIDED_EXERCISE' | 'ROUTINE' | 'TECHNIQUE';

/**
 * Exercise categories
 */
export type ExerciseCategory = 'SOMATIC' | 'BREATHING' | 'MEDITATION' | 'MOVEMENT';

/**
 * Step in a guided exercise
 */
export interface ExerciseStep {
  order: number;
  title: string;
  description: string;
  duration: number; // in seconds
}

/**
 * Content for a somatic exercise
 */
export interface ExerciseContent {
  title: string;
  instructions: string;
  steps: ExerciseStep[];
  benefits: string[];
  tips: string[];
}

/**
 * Metadata for a somatic exercise
 */
export interface ExerciseMetadata {
  author: string;
  tags: string[];
  created_date: string;
  version: string;
}

/**
 * Somatic exercise definition
 */
export interface SomaticExercise {
  name: string;
  description: string;
  category: ExerciseCategory;
  content_type: ContentType;
  estimated_duration: number; // in minutes
  difficulty: DifficultyLevel;
  target_emotions: EmotionType[];
  is_active: boolean;
  is_premium: boolean;
  content: ExerciseContent;
  image_url: string;
  audio_url: string;
  metadata: ExerciseMetadata;
}

