/**
 * Get all available somatic exercises
 * @returns Array of all somatic exercises
 */
export function getAllSomaticExercises(): SomaticExercise[] {
  return somaticExercises;
}

/**
 * Get only active somatic exercises
 * @returns Array of active somatic exercises
 */
export function getActiveSomaticExercises(): SomaticExercise[] {
  return somaticExercises.filter(exercise => exercise.is_active);
}

/**
 * Get exercises by difficulty level
 * @param difficulty The difficulty level to filter by
 * @returns Array of exercises matching the difficulty level
 */
export function getExercisesByDifficulty(difficulty: DifficultyLevel): SomaticExercise[] {
  return somaticExercises.filter(exercise => 
    exercise.is_active && exercise.difficulty === difficulty
  );
}

/**
 * Get exercises that target specific emotions
 * @param emotions Array of emotions to filter by
 * @returns Array of exercises targeting any of the specified emotions
 */
export function getExercisesByTargetEmotions(emotions: EmotionType[]): SomaticExercise[] {
  return somaticExercises.filter(exercise => 
    exercise.is_active && 
    exercise.target_emotions.some(emotion => emotions.includes(emotion))
  );
}

/**
 * Get exercises that are available based on subscription status
 * @param isPremiumUser Whether the user has a premium subscription
 * @returns Array of exercises available to the user
 */
export function getAvailableExercises(isPremiumUser: boolean): SomaticExercise[] {
  return somaticExercises.filter(exercise => 
    exercise.is_active && 
    (isPremiumUser || !exercise.is_premium)
  );
}

/**
 * Get exercises by duration range
 * @param minDuration Minimum duration in minutes
 * @param maxDuration Maximum duration in minutes
 * @returns Array of exercises within the specified duration range
 */
export function getExercisesByDuration(minDuration: number, maxDuration: number): SomaticExercise[] {
  return somaticExercises.filter(exercise => 
    exercise.is_active && 
    exercise.estimated_duration >= minDuration && 
    exercise.estimated_duration <= maxDuration
  );
}

/**
 * Get exercise by name
 * @param name The name of the exercise to find
 * @returns The exercise if found, or undefined if not found
 */
export function getExerciseByName(name: string): SomaticExercise | undefined {
  return somaticExercises.find(exercise => 
    exercise.is_active && exercise.name === name
  );
}

/**
 * Search exercises by keyword (in name, description, or content)
 * @param keyword The keyword to search for
 * @returns Array of exercises matching the keyword
 */
export function searchExercises(keyword: string): SomaticExercise[] {
  const lowercaseKeyword = keyword.toLowerCase();
  return somaticExercises.filter(exercise => 
    exercise.is_active && (
      exercise.name.toLowerCase().includes(lowercaseKeyword) ||
      exercise.description.toLowerCase().includes(lowercaseKeyword) ||
      exercise.content.instructions.toLowerCase().includes(lowercaseKeyword) ||
      exercise.metadata.tags.some(tag => tag.toLowerCase().includes(lowercaseKeyword))
    )
  );
}