// Type definitions for journaling tools
export type ToolCategory = 'JOURNALING' | 'BREATHING' | 'MEDITATION' | 'SOMATIC' | 'GRATITUDE';
export type ContentType = 'TEXT' | 'GUIDED_EXERCISE' | 'AUDIO' | 'VIDEO' | 'INTERACTIVE';
export type DifficultyLevel = 'BEGINNER' | 'INTERMEDIATE' | 'ADVANCED';
export type EmotionType = 
  'ANXIETY' | 'STRESS' | 'OVERWHELM' | 'FRUSTRATION' | 'ANGER' | 'FEAR' | 
  'SADNESS' | 'SHAME' | 'LONELINESS' | 'CONFUSION' | 'CURIOSITY' | 'WONDER' | 
  'GRIEF' | 'RESENTMENT' | 'DISCONNECTION' | 'DISCOMFORT';

export interface ToolMetadata {
  author: string;
  tags: string[];
  created_date: string;
  version: string;
}

export interface Step {
  order: number;
  title: string;
  description: string;
  duration: number; // seconds
}

export interface TextContent {
  title: string;
  instructions: string;
  prompts: string[];
  benefits: string[];
  tips: string[];
}

export interface GuidedExerciseContent {
  title: string;
  instructions: string;
  steps: Step[];
  benefits: string[];
  tips: string[];
}

export type ToolContent = TextContent | GuidedExerciseContent;

export interface JournalingTool {
  name: string;
  description: string;
  category: ToolCategory;
  content_type: ContentType;
  estimated_duration: number; // minutes
  difficulty: DifficultyLevel;
  target_emotions: EmotionType[];
  is_active: boolean;
  is_premium: boolean;
  content: ToolContent;
  image_url: string;
  metadata: ToolMetadata;
}

