// Helper functions for working with journaling tools
export const getJournalingToolsByEmotion = (emotion: EmotionType): JournalingTool[] => {
  return journalingTools.filter(tool => 
    tool.is_active && tool.target_emotions.includes(emotion)
  );
};

export const getJournalingToolsByDifficulty = (difficulty: DifficultyLevel): JournalingTool[] => {
  return journalingTools.filter(tool => 
    tool.is_active && tool.difficulty === difficulty
  );
};

export const getFreeJournalingTools = (): JournalingTool[] => {
  return journalingTools.filter(tool => 
    tool.is_active && !tool.is_premium
  );
};

export const getPremiumJournalingTools = (): JournalingTool[] => {
  return journalingTools.filter(tool => 
    tool.is_active && tool.is_premium
  );
};

export const getJournalingToolById = (name: string): JournalingTool | undefined => {
  return journalingTools.find(tool => tool.name === name);
};

export default journalingTools;